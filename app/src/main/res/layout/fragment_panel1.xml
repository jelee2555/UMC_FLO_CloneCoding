<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/home_pannel_background_iv"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:src="@drawable/img_first_album_default"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/home_pannel_nugu_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_main_mike"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/home_pannel_ticket_iv"/>

    <ImageView
        android:id="@+id/home_pannel_ticket_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_main_ticket"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/home_pannel_setting_iv"/>

    <ImageView
        android:id="@+id/home_pannel_setting_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_main_setting"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/home_pannel_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매혹적인 음색의 여성 보컬\n팝"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_nugu_iv"/>

    <ImageView
        android:id="@+id/home_pannel_btn_play_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/btn_panel_play_large"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_nugu_iv"/>

    <ImageView
        android:id="@+id/home_pannel_album_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_album_exp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@id/home_pannel_background_iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/home_pannel_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Butter"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/home_pannel_album_iv"
        app:layout_constraintBottom_toTopOf="@id/home_pannel_album_singer_tv"
        app:layout_constraintStart_toEndOf="@id/home_pannel_album_iv"/>

    <TextView
        android:id="@+id/home_pannel_album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방탄소년단"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_iv"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_album_title_tv"
        app:layout_constraintStart_toEndOf="@id/home_pannel_album_iv"/>

    <TextView
        android:id="@+id/home_pannel_album_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 36곡 2021.06.05"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/home_pannel_album_iv"
        app:layout_constraintStart_toStartOf="@id/home_pannel_album_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>