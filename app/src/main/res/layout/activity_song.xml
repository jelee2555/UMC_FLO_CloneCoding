<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/song_btn_player_setting_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_player_setting"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/song_btn_player_eq_off_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_player_eq_off"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/song_btn_player_setting_iv"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/song_nugu_btn_down_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/nugu_btn_down"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/song_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라일락"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_btn_player_eq_off_iv"/>

    <TextView
        android:id="@+id/song_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유(IU)"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_title_tv"/>

    <ImageView
        android:id="@+id/song_album_exp2_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_album_exp2"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_singer_tv"/>

    <TextView
        android:id="@+id/song_lyrics_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나라는 꽃가루에\n눈이 따끔해 아야"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_album_exp2_iv"/>


    <ImageView
        android:id="@+id/song_like_off_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_my_like_off"
        android:layout_marginStart="120dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/song_like_on_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_my_like_on"
        android:layout_marginStart="120dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/song_unlike_off_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_unlike_off"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"/>

    <ImageView
        android:id="@+id/song_unlike_on_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_unlike_on"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/song_btn_actionbar_instagram_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_actionbar_instagram"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/song_btn_player_related_iv"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_player_related"
        android:layout_marginBottom="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/song_btn_player_go_list_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_player_go_list"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/song_play_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/song_btn_player_related_iv">

        <ImageView
            android:id="@+id/song_nugu_btn_repeat_unactive_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/nugu_btn_repeat_inactive"/>

        <ImageView
            android:id="@+id/song_nugu_btn_repeat_active_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/btn_player_repeat_on_light"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/song_nugu_btn_repeat_one_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/btn_player_repeat_on1_light"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/song_nugu_btn_skip_previous_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/nugu_btn_skip_previous_32"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/song_nugu_btn_play_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nugu_btn_play_32"/>

        <ImageView
            android:id="@+id/song_nugu_btn_pause_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nugu_btn_pause_32"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/song_nUgu_btn_skip_next_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/nugu_btn_skip_next_32"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="50dp"/>


        <ImageView
            android:id="@+id/song_nugu_btn_random_unactive_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/nugu_btn_random_inactive"/>
    </LinearLayout>


    <SeekBar
        android:id="@+id/song_playbar_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="214"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/song_play_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/song_start_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_playbar_sb"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/song_end_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:34"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_playbar_sb"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>