<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/file_check_all_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/btn_playlist_select_off"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/flie_check_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체선택"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@id/file_check_all_iv"
        app:layout_constraintTop_toTopOf="@id/file_check_all_iv"
        app:layout_constraintBottom_toBottomOf="@id/file_check_all_iv"/>

    <ImageView
        android:id="@+id/file_play_all_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_browse_arrow_right"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/flie_check_all_tv"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/flie_play_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체듣기"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@id/file_play_all_iv"
        app:layout_constraintTop_toTopOf="@id/file_play_all_iv"
        app:layout_constraintBottom_toBottomOf="@id/file_play_all_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>